<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.wangbaiyuan.wificar.MainActivity">


    <ImageView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/camera_err"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:background="#f0222222"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摄像头未连接！"
            android:textColor="#aa0000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0f222222"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/ctrlDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:alpha="0.6"
        android:columnCount="3"
        android:rowCount="3">

        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/ic_forward" />

        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/ic_left" />

        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@drawable/ic_stop" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@drawable/ic_right" />

        <ImageButton
            android:id="@+id/btnBackward"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/ic_back" />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/ctrlDirection"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"

        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_faster"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_faster" />

        <ImageButton
            android:id="@+id/btn_slower"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_slower" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="35dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wifi_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_signal_wifi_off"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指令灯 "/>

            <ImageView
                android:id="@+id/send_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bright_off" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:padding="6dp"
        android:background="#555f8797"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/cmd_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待发送指令"/>
</RelativeLayout>